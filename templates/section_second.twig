<section class="section_second">
    <div class="l-constrain">
        <header class="section__header">
            <h2 class="section__title">{{ section_title }}</h2>
            <a class="section-header__link" href="{{ section_link_url }}">{{ section_link_text }}</a>
        </header>
        {#Intro #}
        {% if section_intro %}
        <div class="section_intro">{{section_intro}}</div>
        {% endif %}

        {#Grid #}
        <div class="grid_second_wrapper">
        {% block section_content %}
        {% endblock %}
        </div>

        {#Footer #}
        <div class="section_footer">
        {% block section_footer %}
        {% endblock %}
        </div>